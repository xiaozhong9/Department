<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mapper.ActivityMapper">
	<!-- 获取所有活动公告 -->
	<select id="findAll" resultType="activity">
		select id,title,img,editor,pubTime viewCount from activity
	</select>
	<!-- 删除活动公告 -->
	<delete id="delActivity" parameterType="int">
		delete from activity
		where id =#{id}
	</delete>
	<!-- 修改活动公告 -->
	<update id="updateActivity" parameterType="activity">
		update activity set
		title=#{title},
		img=#{img},
		content=#{content},
		editor=#{editor}
		where
		id=#{id}
	</update>
	<!-- 添加活动公告 -->
	<insert id="saveActivity" parameterType="activity">
		insert activity
		values(0,#{title},#{img},#{content},null,#{editor},0)
	</insert>
</mapper>