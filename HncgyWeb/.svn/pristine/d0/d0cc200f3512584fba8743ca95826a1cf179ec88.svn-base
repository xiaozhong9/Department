<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mapper.TeacherMapper">
		
		<!-- 上一个教师 -->
	 <select id="getLastTeacher" resultType="articleColumns">
	 select id,name	from teacher where  id &lt; #{id}  limit 1

	</select> 
	<!-- 下一个教师 -->
	 <select id="getNextTeacher" resultType="articleColumns">
		select id,name	from teacher where  id &gt; #{id}  limit 1
	</select>

		<!-- 查找所有教师 -->
		<select id="findAll" resultType="teacher">
			select * from teacher
		</select>
		<!-- 删除指定教师信息 -->
		<delete id="deleteTeacherById" parameterType="int">
			delete from teacher where id=#{id}	
		</delete>
		<!-- 修改教师信息 -->
		<update id="updateTeacher">
			update teacher set 
			name=#{name},
			nickName=#{nickName},
			education=#{education},
			jobTitle=#{jobTitle},
			job=#{job},
			curriculum=#{curriculum},
			speciality=#{speciality},
			imgUrl=#{imgUrl}
			where id=#{id}
		</update>
		<!-- 通过Id查找指定老师 -->
		<select id="findTeacherById" parameterType="int" resultType="teacher">
			select * from teacher where id=#{id}
		</select>
		<!-- 插入老师信息 -->
		<insert id="saveTeacher" parameterType="teacher">
		 insert teacher values(0,
		 #{name},
		 #{nickName},
		 #{education},
		 #{jobTitle},
		 #{job},
		 #{curriculum},
		 #{speciality},
		 #{imgUrl}
		 );
		</insert>
		<!-- 批量删除老师信息 -->
		<delete id="deleteTeachers" >
			delete from teacher where id in
			<foreach collection="ids" item="id" separator="," open="(" close=")" >
				#{id}	
			</foreach>		
		</delete>
</mapper>